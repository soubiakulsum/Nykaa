<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.BrandsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="@color/light_grey"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10" />


    <ImageView
        android:id="@+id/SearchBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/ic_loupe" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_30"
        android:backgroundTint="@color/light_grey"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_80"
        android:hint="Search Brands"
        android:textSize="@dimen/sp_15"
        android:fontFamily="@font/cera_pro_regular"
        android:paddingBottom="@dimen/dp_8"
        android:text="" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_85"
        android:layout_marginEnd="@dimen/dp_250" />

    <Button
        android:id="@+id/NewBrands"
        android:layout_width="@dimen/dp_110"
        android:layout_height="62dp"
        android:layout_marginStart="@dimen/dp_4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="@dimen/dp_25"
        android:backgroundTint="@android:color/transparent" />

    <Button
        android:id="@+id/Luxe"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/dp_110"
        android:layout_height="62dp"
        android:gravity="center"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="@dimen/dp_25"
        android:backgroundTint="@android:color/transparent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_80" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_80" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_80" />




</RelativeLayout>