<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.BrandsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10"
        android:backgroundTint="@color/light_grey"
        android:background="@drawable/rounded_bg"
        android:paddingTop="@dimen/dp_8"
        android:paddingStart="@dimen/dp_20"
        android:layout_height="@dimen/dp_40"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_70"
        android:id="@+id/SearchBrand"
        android:layout_marginStart="300dp"
        android:src="@drawable/ic_loupe"
        android:layout_height="wrap_content"/>

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:hint="Search Brands"
        android:paddingBottom="@dimen/dp_8"
        android:layout_height="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_65"
        android:text="" />

    <Button
        android:layout_width="@dimen/dp_110"
        android:id="@+id/NewBrands"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_4"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="225dp"
        android:layout_height="62dp"/>

    <Button
        android:layout_width="@dimen/dp_110"
        android:id="@+id/Luxe"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_4"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="@dimen/dp_170"
        android:layout_height="62dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_120"
        android:id="@+id/RecyclerView1"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_120"
        android:id="@+id/RecyclerView3"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_120"
        android:id="@+id/RecyclerView4"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_height="wrap_content"/>




    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/RecyclerView2"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_250"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_height="wrap_content"/>

</RelativeLayout>