<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_20"
    android:elevation="@dimen/dp_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTopJustIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sanspro"
            android:text="Top Just In"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_23" />

        <ImageView
            android:id="@+id/ivBrandsName"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_200"
            android:layout_below="@id/tvTopJustIn"
            android:layout_marginTop="@dimen/dp_20" />

        <TextView
            android:id="@+id/tvJustInBrands"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivBrandsName"
            android:layout_marginTop="@dimen/dp_6"
            android:fontFamily="@font/sanspro"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25" />

        <ImageView
            android:id="@+id/ivBrandsName2"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_200"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_toRightOf="@id/ivBrandsName" />

        <TextView
            android:id="@+id/tvJustInBrands2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivBrandsName2"
            android:layout_alignStart="@+id/ivBrandsName2"
            android:layout_alignEnd="@+id/ivBrandsName2"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/sanspro"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>