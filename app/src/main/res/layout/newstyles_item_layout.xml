<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_20"
    android:elevation="@dimen/dp_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvStylesFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sanspro"
            android:text="New Styles From"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22" />

        <ImageView
            android:id="@+id/ivNewStyleBrandName"
            android:layout_width="160dp"
            android:layout_height="@dimen/dp_100"
            android:layout_below="@id/tvStylesFrom"
            android:layout_marginTop="@dimen/dp_10" />

        <ImageView
            android:id="@+id/ivNewStyleBrandName2"
            android:layout_width="160dp"
            android:layout_height="@dimen/dp_100"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_toEndOf="@id/ivNewStyleBrandName" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>