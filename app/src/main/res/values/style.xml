<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="item_title_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/cera_pro_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="item_second_title_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/cera_pro_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
    </style>


    <style name="FirstTextViewInAccounts">
        
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:drawablePadding">@dimen/dp_15</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="ImageButtonInAccounts">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_baseline_navigate_next_24</item>
    </style>

    <style name="ViewInAccountsFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_2</item>
        <item name="android:layout_marginTop">@dimen/dp_13</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="SecondTextViewInAccountsFragment">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="ButtonInAccountsFragments">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_20</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="TextViewOfCategories">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/sanspro</item>
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:layout_marginTop">@dimen/dp_6</item>
    </style>

</resources>